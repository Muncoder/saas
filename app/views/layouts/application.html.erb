<!DOCTYPE html>
<html>
<head>
  <title>Saas</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-inverse">
		<div class="container">
			<div class="navbar-brand">
				<i class="fa fa-car fa-1g"> </i>
				<%= link_to 'Dev Match', root_path %>
			</div>
			<div class="nav navbar-nav navbar-right">
				<% if user_signed_in? %>
					<%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-danger navbar-btn', data: { confirm: 'Sure to Sign Out ?' } %>
				<% else %>
					<%= link_to 'Sign In', new_user_session_path, class: 'btn btn-primary navbar-btn' %>
					<%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-info navbar-btn' %>
				<% end %>
			</div>
			 
			<ul class="nav navbar-nav navbar-right">
				<li><%= link_to 'Contact Lists', contacts_path %></li>
				<li><%= link_to 'About', pages_about_path %></li>
				<li><%= link_to 'Contact Us', new_contact_path %></li>
			</ul>
		</div>
	</div>

	<div class="container">
		<% flash.each do |name, msg| %>
			<%= content_tag(:div, msg, class: "alert alert-#{name}" ) %>
		<% end %>


		<%= yield %>
	</div>


</body>
</html>
